{
	"name": "@petracord/website",
	"description": "Website for the Petra Gurin discord fan server",
	"version": "0.0.1",
	"author": "Petracord Productions",
	"license": "MIT",
	"type": "module",
	"private": true,
	"repository": {
		"type": "git",
		"url": "https://github.com/Petracord/website.git"
	},
	"homepage": "https://github.com/Petracord/website",
	"engines": {
		"node": "20.x"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"sync": "svelte-kit sync",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"lint": "prettier --check . && eslint src --ext ts,svelte",
		"lint:fix": "eslint . --fix",
		"format": "prettier --write .",
		"dryrun": "pnpm check && pnpm lint && pnpm build"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.8.1",
		"@commitlint/config-conventional": "^17.8.1",
		"@sveltejs/adapter-cloudflare": "^2.3.4",
		"@sveltejs/kit": "^1.27.7",
		"@typescript-eslint/eslint-plugin": "^6.13.2",
		"@typescript-eslint/parser": "^6.13.2",
		"eslint": "^8.55.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.0.1",
		"eslint-plugin-svelte": "^2.35.1",
		"husky": "^8.0.3",
		"lint-staged": "^14.0.1",
		"prettier": "^3.1.0",
		"prettier-plugin-svelte": "^3.1.2",
		"svelte": "^4.2.8",
		"svelte-check": "^3.6.2",
		"svelte-eslint-parser": "^0.33.1",
		"typescript": "^5.3.3",
		"vite": "^4.5.1"
	},
	"lint-staged": {
		"*.{mjs,cjs,js,ts}": [
			"eslint --fix --ext js,ts",
			"prettier --write --loglevel=warn \"**/*.{mjs,cjs,js,ts}\""
		],
		"*.{svelte}": [
			"eslint --fix --ext svelte",
			"prettier --write --loglevel=warn \"**/*.svelte\""
		],
		"*.{json,yml,yaml,md}": [
			"prettier --write --loglevel=warn \"**/*.{json,yml,yaml,md}\""
		]
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	}
}
